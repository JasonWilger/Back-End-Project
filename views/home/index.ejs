<%- include('../partials/header/header'); -%>
<link rel="stylesheet" href="/styles/animate.css">
<link rel="stylesheet" href="/styles/indexStyles.css">
<link rel="stylesheet" href="/styles/cards.css">

</head>
<body>

    <!-- Modal -->
    <div id="myModal" class="modal fade in">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title text-center">Welcome to Crushn'!</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            Please Sign-up to start! If you already have an account then sign-in below.
            <form>
              <div class="form-group">
                <label for="loginEmail">Email address</label>
                <input type="email" class="form-control" id="loginEmail">
              </div>
              <div class="form-group">
                <label for="loginPassword">Password</label>
                <input type="password" class="form-control" id="loginPassword">
              </div>
              <button type="submit" class="btn btn-dark">Sign-in</button>
            </form>
            <hr>
            <button type="button" class="btn modalButtonStyle" onclick="">Google Sign-in</button>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
            <button type="button" class="btn modalButtonStyle" onclick="window.open('signup.html')">Sign-up</button>
          </div>
        </div>
      </div>
    </div>
    <!-- end modal -->

    <!-- navigation -->
    <div class="top-nav">
    <ul class="nav nav-pills nav-justified">
        <li class="nav-item">
          <a id="nav-text" class="nav-link" href="/about">About</a>
        </li>
        <li class="nav-item">
          <a id="nav-text" class="nav-link" href="/signup">Sign-up</a>
        </li>
        <li class="nav-item">
          <a id="nav-text" class="nav-link" href="#" data-toggle="modal" data-target="#myModal">Sign-in</a>
        </li>
        <li class="nav-item">
          <a id="nav-text" class="nav-link" href="/profile">Profile</a>
        </li>
      </ul>
    </div>
    <!-- end navigation -->

    <!-- logo -->
    <div class="interaction">
      <div class="card w-75">
        <div id="interaction" class="card-body">
          <div class="sign">
            <span class="fast-flicker">C</span>RUS<span class="flicker">H</span>N'
          </div>
        </div>

        <!-- toggle user cards -->
        <div id="user-cards">
          <!-- user cards will render here -->
        </div>

        <button id="crushn-button" class="btn" onclick="shuffle()">GET CRUSHN'</button>
        <!-- end toggle user cards -->

        <!--Sign-Out-->
        <a id="sign-out" type="button" class="btn btn-none" onclick="signOut();">Sign-out</a>

        </div>
        </div>
      </div>
    <!-- end logo -->

<%- include('../partials/footer/footer'); -%>

<!-- end script for button  -->
<script src="script/cards.js"></script>
</body>
</html>